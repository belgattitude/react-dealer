{
  "compilerOptions": {
    "target": "es5",
    "jsx": "react",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./build/"
  },
  "awesomeTypescriptLoaderOptions": {
    /* ... */
  } ,
  "exclude": [
    "build",
    "dist",
    "node_modules",
    "typings/browser.d.ts",
    "typings/browser"
  ],
  "filesGlob": [
    "./src/**/*.ts",
    "!./node_modules/**/*.ts"
  ]/* Not needed anymore in typescript 1.9-dev / 2.0
  // resolution is made autmatically
  "files": [
    //"./typings/index.d.ts"
  ]*/
}